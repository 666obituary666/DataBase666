<Window x:Class="DataBase666.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase666"
        mc:Ignorable="d"
        Title="Авторизация" Height="331.679" Width="300">
    <Grid>
        <Label x:Name="Lb" FontSize="25" Content="Авторизация" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50"/>
        <TextBox x:Name="TxtBoxLogin" Height="30" Width="150" HorizontalAlignment="Right" Margin="0,0,0,180"/>
        <PasswordBox x:Name="TxtBoxPassWord" Height="30" Width="150" HorizontalAlignment="Right" Margin="0,0,0,100"/>
        <Label x:Name="Lb1" FontSize="22" Content="Логин" VerticalAlignment="Center" HorizontalAlignment="Left" Height="50" Margin="0,0,0,180"/>
        <Label x:Name="Lb2" FontSize="22" Content="Пароль" VerticalAlignment="Center" HorizontalAlignment="Left" Height="50" Margin="0,0,0,100"/>
        <Button x:Name="BtnAdmin" Content="Войти" Height="40" Width="200" Click="BtnAdmin_Click"/>
        <Button x:Name="BtnGuest" Content="Режим гостя" Height="40" Width="200" Margin="0,0,0,-100" Click="BtnGuest_Click"/>
    </Grid>
</Window>
